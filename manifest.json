{
    "name": "Metric",
    "version": "1.0",
    "description": "Measurement Convertion Tool",
    "permissions": ["activeTab","declarativeContent", "storage", "tabs", "<all_urls>"],

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
      "all_frames": true,
    }],

    "page_action": {
      "default_popup": "popup.html",
      "default_icon": "assets/cartoonChef.jpg"
    },

    "icons": {
      "16": "assets/cartoonChef.jpg",
      "32": "assets/cartoonChef.jpg",
      "48": "assets/cartoonChef.jpg",
      "128": "assets/cartoonChef.jpg"
    },

    "manifest_version": 2
  }
